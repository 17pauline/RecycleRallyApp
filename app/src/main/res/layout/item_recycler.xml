<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_item_recycler">


    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/item_iv_profileImage"
        android:layout_width="48dp"
        android:layout_height="48dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/star_24px"
        android:layout_margin="8dp"
        android:scaleType="centerCrop"
        app:shapeAppearance="@style/Circle"
        />

    <TextView
        android:id="@+id/item_tv_position"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_iv_profileImage"
        android:layout_marginStart="24dp"
        android:text="@string/item_recycler_position"
        style="@style/TextRegularBold"
        />

    <TextView
        android:id="@+id/item_tv_username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/item_tv_position"
        android:layout_marginStart="24dp"
        android:text="@string/item_recycler_username"
        style="@style/TextRegularBold"
        />

    <TextView
        android:id="@+id/item_tv_points"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="24dp"
        android:text="@string/item_recycler_points"
        style="@style/TextRegular"
        />




</androidx.constraintlayout.widget.ConstraintLayout>